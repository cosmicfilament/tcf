<!--page title start-->
<section class="page-title page-contact">
    <div class="container">
        <h4 class="text-uppercase">Contact</h4>
        <span>Please fill out the contact form if you have any questions or comments.</span>
        <ol class="breadcrumb">
            <li>
                <a href="/home">Home</a>
            </li>
            <li class="active">Contact</li>
        </ol>
    </div>
</section>
<!--page title end-->

<!--body content start-->
<section class="body-content">
    <div class="page-content">

        <div class="container">

            <div class="row">

                <div class="col-md-10 col-md-offset-1">
                    <form class="contact-comments" action="/contact/process" method="post">
                        <input type="hidden" name="_csrf" value="{{csrf}}">
                        <div class="row">

                            <div class="col-md-6 ">

                                <div class="form-group">
                                    <!-- From -->
                                    <input type="text" name="from" class=" form-control" placeholder="Name *" maxlength="100" required data-error="You must enter name">
                                    <div class="help-block with-errors"></div>
                                </div>
                                <div class="form-group">
                                    <!-- Email -->
                                    <input type="email" name="email" class=" form-control" placeholder="Email *" maxlength="100" required data-error="Invalid email address!">
                                    <div class="help-block with-errors"></div>
                                </div>
                                <div class="form-group">
                                    <!-- Subject -->
                                    <input type="text" name="subject" class=" form-control" placeholder="Subject" maxlength="100">
                                </div>
                            </div>

                            <div class="col-md-6 form-group">
                                <div class="form-group">
                                    <!-- Comment -->
                                    <textarea name="comments" class="cmnt-text form-control" placeholder="Comments" maxlength="400"></textarea>
                                </div>
                                <div class="form-group full-width">
                                    <button type="submit" name="submit" class="btn btn-small btn-dark-solid ">Send Message</button>
                                </div>
                            </div>
                            <div class="col-md-6 ">
                                <div class="response">...</div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>

    </div>
</section>
<!--body content end-->
